<link rel="stylesheet" href="css/randevu.css" />
<section id="main-content">
      <div class="row1">
        <div class="col1">
          <form id="randevu-form" action="appointments/test" method="post">
            <div class="musteri-info">
              <h4>İletişim Bilgileriniz</h4>
              
              <label for="ad"></label>
              <input type="text"  name="ad" placeholder="Adınız" />

              <label for="soyad"></label>
              <input
                type="text"
                name="soyad"
                placeholder="Soyadınız"
              />

              <label for="email"></label>
              <input
                type="email"
                
                name="eposta"
                placeholder="E-Posta"
              />

              <label for="tel"></label>
              <input
                type="tel"
                
                name="tel"
                {{!-- pattern="[0-9]{4}-[0-9]{3}-[0-9]{2}-[0-9]{2}" --}}
                maxlength="11"
                placeholder="Telefon(0505..)"
                />
                
                <br>
                <h4>Dövme Tarzı</h4>
                <ul class="tattoo-styles">
                <li class="tattoo-style">
                  <label class="tattoo-style-radio" for="realistik"
                    >Realistik
                  </label>
                  <input
                    class="radio-button"
                    type="radio"
                    
                    name="dovme_tarzi"
                    value="Realistik"
                  />
                </li>
                <li class="tattoo-style">
                  <label class="tattoo-style-radio" for="oldschool"
                    >Oldschool</label
                  >
                  <input
                    class="radio-button"
                    type="radio"
                    
                    name="dovme_tarzi"
                    value="Oldschool"
                  />
                </li>
                <li class="tattoo-style">
                  <label class="tattoo-style-radio" for="linework"
                    >Linework</label
                  >
                  <input
                    class="radio-button"
                    type="radio"
                    
                    name="dovme_tarzi"
                    value="Linework"
                  />
                </li>
                <li class="tattoo-style">
                  <label class="tattoo-style-radio" for="dotwork"
                    >Dotwork</label
                  >
                  <input
                    class="radio-button"
                    type="radio"
                    
                    name="dovme_tarzi"
                    value="Dotwork"
                  />
                </li>
                <li class="tattoo-style">
                  <label class="tattoo-style-radio" for="blackwork"
                    >Blackwork</label
                  >
                  <input
                    class="radio-button"
                    type="radio"
                    
                    name="dovme_tarzi"
                    value="Blackwork"
                  />
                </li>
                <li class="tattoo-style">
                  <label class="tattoo-style-radio" for="watercolor"
                    >Watercolor</label
                  >
                  <input
                    class="radio-button"
                    type="radio"
                   
                    name="dovme_tarzi"
                    value="Watercolor"
                  />
                </li>
                <li class="tattoo-style">
                  <label class="tattoo-style-radio" for="neotraditional"
                    >Neotraditional</label
                  >
                  <input
                    class="radio-button"
                    type="radio"
                    
                    name="dovme_tarzi"
                    value="Neotraditional"
                  />
                </li>
                </ul>
                {{!-- ---------------------- --}}
                <h4>Dövme Rengi</h4>
              <ul class="tattoo-colors">
                <li class="tattoo-color">
                  <label class="tattoo-style-radio" for="renkli">Renkli </label>
                  <input
                    class="radio-button"
                    type="radio"
                    
                    name="dovme_rengi"
                    value="Renkli"
                  />
                </li>
                <li class="tattoo-color">
                  <label class="tattoo-style-radio" for="siyah-beyaz"
                    >Siyah-Beyaz
                  </label>
                  <input
                    class="radio-button"
                    type="radio"
                    
                    name="dovme_rengi"
                    value="Siyah-Beyaz"
                  />
                </li>
              </ul>
              <h4>Dövme Boyutu</h4>
              <br>
              <div class="tattoo-size">
                <label for="boyut"></label>
                <input
                  type="text"
                  
                  name="dovme_boyutu"
                  placeholder="(cm) Ör.10x10 cm"
                />
              </div>
              <div class="ekstra-bilgi__not">
              <h4>Özel bir durumunuz veya isteğiniz varsa belirtiniz</h4>
              <br>
              <textarea
                name="ozel_durum"
                rows="4" cols="50"
                placeholder="(Alerji,yara izi,dövme kapatma,dövme sildirme vb.)"
              ></textarea>
            </div>
            </div>
          </form>
        </div>

        </div>
        <div class="randevu-btn">
          <button type="submit" form="randevu-form" value="Submit" onclick="popup()">
            Randevu Talebi Oluştur!
          </button>
        </div>
      </div>
    </section>

    <script>
      function popup() {
        alert(" Randevu talebiniz alınmıştır. Lütfen stüdyomuzun sizinle iletişime geçmesini bekleyiniz. Bizi tercih ettiğiniz için teşekkür ederiz :) ")
      }
    </script>